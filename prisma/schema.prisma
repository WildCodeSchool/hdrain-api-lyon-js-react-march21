// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id             Int    @id @default(autoincrement())
  username       String @unique @db.VarChar(160)
  hashedPassword String @db.VarChar(255)
}

model session {
  sid    String   @id @db.VarChar(255)
  sess   Json
  expire DateTime @db.Timestamp(6)
}

// beginning of location model
model location {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(255)
  lat         Decimal
  lng         Decimal
  sensors     sensor[]
  experiments experiment[]
}

model sensor {
  id           Int       @id @default(autoincrement())
  sensorNumber Int       @unique
  spotName     String    @db.VarChar(255)
  lat          Decimal
  lng          Decimal
  createdAt    DateTime  @default(now())
  deletedAt    DateTime?
  location     location  @relation(fields: [locationId], references: [id])
  locationId   Int       @db.Integer
  status       status[]
}

model experiment {
  id               Int      @id @default(autoincrement())
  timestamp        DateTime @db.Timestamptz
  neuralNetworkLog String   @db.Text
  assimilationLog  String   @db.Text
  rainGraph        String   @db.Text
  costGraph        String   @db.VarChar(255)
  parameters       String   @db.Text
  location         location @relation(fields: [locationId], references: [id])
  locationId       Int      @db.Integer
  status           status[]
}

model status {
  id           Int        @default(autoincrement())
  code         Int
  sensor       sensor     @relation(fields: [sensorId], references: [id])
  sensorId     Int        @db.Integer
  experiment   experiment @relation(fields: [experimentId], references: [id])
  experimentId Int        @db.Integer

  @@id([sensorId, experimentId])
}
