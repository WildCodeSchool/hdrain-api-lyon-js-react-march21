// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id             Int    @id @default(autoincrement())
  username       String @unique @db.VarChar(15)
  hashedPassword String @db.VarChar(255)
}

model sensor {
  id           Int    @id @default(autoincrement())
  sensorNumber Int    @unique
  spotName     String @db.VarChar(255)
  lat          Int
  long         Int
  status       Int
  location_id  Int    @db.Int
  location     sensor @relation(fields: [location_id], references: [id])

  @@index([location_id], name: "locationId")
}

// beginning of location model
model location {
  id             Int      @id @default(autoincrement())
  name           String   @db.VarChar(255)
  lat            Int
  lng            Int
  sensorList     String[]
  experienceList String[]
}

