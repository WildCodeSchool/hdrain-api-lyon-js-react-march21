// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id             Int    @id @default(autoincrement())
  username       String @unique @db.VarChar(15)
  hashedPassword String @db.VarChar(255)
}

// beginning of location model
model location {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(255)
  lat         Decimal
  lng         Decimal
  updatedAt   DateTime     @updatedAt
  sensors     sensor[]
  experiments experiment[]
}

model sensor {
  id           Int      @id @default(autoincrement())
  sensorNumber Int      @unique
  spotName     String   @db.VarChar(255)
  lat          Decimal
  lng          Decimal
  location     location @relation(fields: [locationId], references: [id])
  locationId   Int      @db.Integer
  status       status[]
}

model experiment {
  id               Int      @id @default(autoincrement())
  timestamp        DateTime @db.Timestamp
  neuralNetworkLog String   @db.Text
  assimilationLog  String   @db.Text
  rainGraph        String   @db.VarChar(255)
  costGraph        String   @db.VarChar(255)
  parameters       String   @db.Text
  location         location @relation(fields: [locationId], references: [id])
  locationId       Int      @db.Integer
}

model status {
  id              Int      @id @default(autoincrement())
  timestampStatus DateTime @db.Timestamp
  statusCode      Int
  sensor          sensor   @relation(fields: [sensorId], references: [id])
  sensorId        Int      @db.Integer
}
